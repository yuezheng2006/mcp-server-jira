{
  "mcpServers": {
    "jira-mcp": {
      "command": "uvx",
      "args": [
        "install",
        "git+https://github.com/yuezheng2006/mcp-server-jira.git",
        "jira-mcp",
        "--transport",
        "stdio"
      ],
      "env": {
        "JIRA_SERVER_URL": "http://your-jira-instance.com",
        "JIRA_USERNAME": "your_username",
        "JIRA_PASSWORD": "your_password"
      }
    }
  }
} 